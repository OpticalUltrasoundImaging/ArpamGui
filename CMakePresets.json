{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "build/${presetName}",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "debug",
            "inherits": "base",
            "displayName": "Debug",
            "description": "Debug build with no special settings",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "base",
            "displayName": "Release",
            "description": "Release build with no special settings",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "win64",
            "displayName": "Win64 (Visual Studio 2022)",
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/arch:AVX2 /EHsc",
                "CMAKE_C_FLAGS": "/arch:AVX2 /EHsc"
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--format-style=file"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release",
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-cl",
            "hidden": true,
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "toolset": "ClangCL",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--format-style=file",
                "CMAKE_C_COMPILER_TARGET": "x86_64-pc-windows-msvc",
                "CMAKE_CXX_COMPILER_TARGET": "x86_64-pc-windows-msvc",
                "CMAKE_CXX_FLAGS": "/arch:AVX2 /EHsc",
                "CMAKE_C_FLAGS": "/arch:AVX2 /EHsc"
            }
        },
        {
            "name": "clang-cl-debug",
            "displayName": "Clang-CL Debug",
            "inherits": "clang-cl",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-cl-release",
            "displayName": "Clang-CL Release",
            "inherits": "clang-cl",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Win64 Release",
            "configurePreset": "win64",
            "configuration": "Release"
        },
        {
            "name": "Win64 RelWithDebInfo",
            "configurePreset": "win64",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "Win64 Debug",
            "configurePreset": "win64",
            "configuration": "Debug"
        }
    ]
}